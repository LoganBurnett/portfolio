@page
@model CBTDWeb.Pages.Categories.IndexModel
@{
    ViewData["Title"] = "Categories";
}

<div class="container">
    <div class="row pt-4 pb-1">
        <div class="col-6">
            <h2 class="text-primary">
                Category List
            </h2>
        </div>
        <div class="col-6 text-end">
            <a asp-page="Upsert" asp-route-id="0" class="btn btn-primary">
                <i class="bi bi-plus-circle"></i>  Create New Category
            </a>
        </div>
    </div>
    <table class="table table-bordered table-striped" id="DT_Categories" style="width:100%">
        <thead>
            <tr>
                <th>
                    Category Name
                </th>
                <th>
                    Display Order
                </th>
                <th>
                    &nbsp;
                </th>
            </tr>
        </thead>
    </table>
</div>

@section Scripts
{
    <script src="~/js/categories.js"></script>
}